<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

<div class="card text-center">

<div class="card-body px-lg-5 pt-10 ">
  <h1 class="card-header info-color white-text text-center py-4">Login</h1>
<% if (messages.error) { %>
  <%= messages.error %>
<% } %>

<form class="text-center" style="color: #757575;" action="/login" method="POST">
  <!-- Email -->
  <div class="md-form  pt-3">    
    <input type="email" id="email" name="email" class="form-control col-sm-8 offset-sm-2" required>
    <label for="email" >Email</label>
  </div>
  <!-- Password -->
  <div class="md-form">
    <input type="password" id="password" name="password" class="form-control col-sm-8 offset-sm-2" required>
    <label for="password">Password</label>
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>
<div class="">
<a href="/register" >Register</a>
</div>
</div></div>

