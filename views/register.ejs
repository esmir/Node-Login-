<div class="card text-center">
  <div class="card-body px-lg-5 pt-3">

<h1 class="card-header info-color white-text text-center py-4">Register</h1>
<form  action="/register" method="POST">
  <div class="md-form pt-3">     
    <input type="text" id="name" name="name" class="form-control col-sm-8 offset-sm-2 pt-10" required>
    <label for="name">Name</label>
  </div>
  <div class="md-form">     
    <input type="email" id="email" name="email" class="form-control col-sm-8 offset-sm-2" required>
    <label for="email">Email</label>
  </div>
  <div class="md-form"> 
    <input type="password" id="password" name="password" class="form-control col-sm-8 offset-sm-2" required>    
    <label for="password">Password</label>
  </div>
  <div>
  <button type="submit" class="btn btn-primary">Register</button>
</div>
</form>
<a class="" href="/login">Login</a>

</div>

